---
import Layout from '../layouts/default.astro';
import ShopItems from '../components/shop-items.astro';
---

<Layout>
	<div class="shop">
		<h1>Shop Sandwich Kits</h1>

		<noscript>
			<p>
				JavaScript is required to purchase things from the Sndwch web store. To
				order by phone , call <a href="tel:555-555-5555">555-555-5555</a>
			</p>
		</noscript>
		<div class="products">
			<ShopItems />
			<div class="cart">
				<p>TODO: show cart</p>
			</div>
		</div>
	</div>

	<style>
		.shop {
			padding: 3rem 5%;
		}

		.products {
			align-items: flex-start;
			display: grid;
			gap: 2rem;
			grid-template-columns: 1fr 260px;
			position: relative;
		}
	</style>
</Layout>
